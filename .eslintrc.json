{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "import/core-modules": [
      "@jest/globals"
    ]
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
      "import/extensions": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prettier/prettier": ["error", {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "bracketSpacing": true,
        "arrowParens": "always"
      }]
  }
}
